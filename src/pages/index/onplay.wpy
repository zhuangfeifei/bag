<script>
import wepy from 'wepy';
import { connect } from 'wepy-redux';
import 'wepy-async-function';

@connect({
  userinfo(state) {
    return state.counter.userinfo;
  },
  order(state) {
    return state.counter.order;
  },
  imgUrl(state) {
    return state.counter.imgUrl;
  }
})
export default class Onplay extends wepy.page {
  config = {
    navigationBarTitleText: '支付方式'
  };

  components = {};

  data = {
    isWx: false,
    isPay: false,
    codeiph: '',
    cosde: false,
    password: '',
    passwords: []
  };

  computed = {};

  methods = {
    secteds() {
      this.isWx = false;
    },
    sected_nt() {
      this.isWx = true;
    },
    playnone() {
      if(this.isWx){
        let order = {
          unionId: this.userinfo.unionid, orderId: this.order.id, payType: 1, payPwd: '', yueAmount: 0, wxAmount:this.order.actual_price
        }
        console.log(order)
        wepy.$Api.pay(order).then(res => { 
            console.log(res.data)
            if (res.data.code == 200) {
              wx.requestPayment({
                timeStamp: res.data.data.timestamp,
                nonceStr: res.data.data.nonce,
                package: res.data.data.packageName,
                signType: 'MD5',
                paySign: res.data.data.signature,
                success:res=> { 
                  console.log(res)
                  wx.reLaunch({
                    url: '/pages/index/payment'
                  });
                },
                fail (res) { }
              })
            }
        }, err => {
            
        })
      }else{
        this.isPay = true
        
      }
      this.$apply();
    },
    toplay() {
      wx.navigateTo({
        url: '/pages/my/setting/playkey'
      });
    },
    bindKeyInput(e) {
      this.password = e.detail.value;
      this.passwords = e.detail.value.split('');
    }
  };

  watch = {
    password(value) {
      if (value.length == 6) {
        this.isPay = false
        wepy.showLoading({
          title: '支付中...'
        });
        let order = {
          unionId: this.userinfo.unionid,
          orderId: this.order.id,
          payType: 2,
          payPwd: this.password,
          yueAmount: this.order.actual_price,
          wxAmount: 0
        };
        console.log(order);
        wepy.$Api.pay(order).then(
          res => {
            console.log(res.data);
            this.password = ''
            this.passwords = []
            this.$apply();
            if (res.data.code == 200) {
              wx.reLaunch({
                url: '/pages/index/payment'
              });
            }else{
              
            }
          },
          err => {
            this.cosde = true;
            setTimeout(() => {
              this.cosde = false;
              this.$apply();
            }, 2000);
          }
        );
      }
    }
  };

  onLoad() {}
}
</script>

