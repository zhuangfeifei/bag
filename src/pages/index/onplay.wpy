<template>
  <view wx:if="{{userinfo}}">
    <view class="ontop_play">
      <text>订单金额：</text>
      <view>
        <text>￥</text>
        <text>{{order.actual_price}}</text>
      </view>
    </view>
    <view class="colocumn">请选择支付方式</view>
